#include <stdio.h>
#include <stdlib.h>

void main()
{
	int x ;

	printf("Enter an integer\r\n");
	fflush(stdout); fflush(stdin);
	scanf("%d",&x);

	printf("You Entered: %d\r\n",x);



}
