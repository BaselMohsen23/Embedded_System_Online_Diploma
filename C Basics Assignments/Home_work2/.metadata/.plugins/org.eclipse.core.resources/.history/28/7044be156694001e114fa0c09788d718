#include<stdio.h>

void main(){

	int n=0 ;
	printf("Enter the number you want to check: ");
	fflush(stdout); fflush(stdin);
	scanf("%d",&n);


//	printf("the answer is = %d",n%2);

	if( n%2 == 0)
	{
		printf("%is even",n);
	}else
	{
		printf("%d is odd ",n);
	}
}
