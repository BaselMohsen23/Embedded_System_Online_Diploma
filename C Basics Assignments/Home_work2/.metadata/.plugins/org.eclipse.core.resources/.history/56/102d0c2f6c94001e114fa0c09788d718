#include<stdio.h>

void main()
{

	float n1=1.2,n2=2.44,n3=3.48 ;
	printf("Enter three numbers : ");
//	fflush(stdout); fflush(stdin);
//	scanf("%f %f %f ",&n1,n2,n3);


	if( n1 > n2)
	{
		if(n1>n3)
		{
			printf("Largest number is %f",n1);
		}
		else
		{
			printf("Largest number is %f",n3);

		}
	}else if (n2>n3)
	{
		printf("Largest number is %f",n2);
	}else
	{
		printf("Largest number is %f",n3);
	}




}
