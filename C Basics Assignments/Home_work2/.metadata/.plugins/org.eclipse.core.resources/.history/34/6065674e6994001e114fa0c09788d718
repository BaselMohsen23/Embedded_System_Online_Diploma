 Description : C Program to check Vowel or Consonant
 ============================================================================
 */

#include<stdio.h>

void main()
{

	char a;
	printf("Enter an alphabet: ");
	fflush(stdout); fflush(stdin);
	scanf("%c",&a);


	if( a == 'i' || a == 'u' || a == 'a' || a == 'o' || a == 'e'  )
	{
		printf("%c is a vowel",a);
	}else
	{
		printf("%c is Consonant ",a);
	}
}
